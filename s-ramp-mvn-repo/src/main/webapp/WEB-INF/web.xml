<?xml version="1.0"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<listener>
		<listener-class>org.overlord.sramp.maven.repo.listeners.MavenRepositoryInitializer</listener-class>
	</listener>

	<servlet>
		<servlet-name>MavenFacadeServlet</servlet-name>
		<servlet-class>org.overlord.sramp.maven.repo.servlets.MavenFacadeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MavenFacadeServlet</servlet-name>
		<url-pattern>/repo/*</url-pattern>
	</servlet-mapping>

</web-app>
