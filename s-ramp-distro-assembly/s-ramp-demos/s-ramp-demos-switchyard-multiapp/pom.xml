<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
      <groupId>org.overlord.sramp.demos</groupId>
      <artifactId>s-ramp-demos</artifactId>
      <version>0.1.2-SNAPSHOT</version>
      <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>s-ramp-demos-switchyard-multiapp</artifactId>
    <groupId>org.overlord.sramp.demos.switchyard.multiapp</groupId>
    <name>Quickstart Demo: Multiple Applications</name>
    <packaging>pom</packaging>
    <modules>
        <module>artifacts</module>
        <module>order-service</module>
        <module>order-consumer</module>
        <module>web</module>
    </modules>
    
    <properties>
      <org.switchyard.version>0.8.0.Final</org.switchyard.version>
      <javax.jms.version>1.1</javax.jms.version>
      <org.hornetq.version>2.2.13.Final</org.hornetq.version>
    </properties>
    
    <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>2.5</version>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>demo</id>
      <distributionManagement>
        <repository>
          <id>local-sramp-repo</id>
          <name>S-RAMP Releases Repository</name>
          <url>sramp://localhost:8080/s-ramp-server/?artifactType=SwitchyardApplication</url>
        </repository>
        <snapshotRepository>
          <id>local-sramp-repo-snapshots</id>
          <name>S-RAMP Snapshots Repository</name>
          <url>sramp://localhost:8080/s-ramp-server/?artifactType=SwitchyardApplication</url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
  </profiles>
</project>
