<project name="MyProject" default="download" basedir=".">
        
        <property name="DAV.server" value="localhost:8080"/>
        <property name="DAV.root" value="repository"/>
        <property name="DAV.user" value="admin"/>
        <property name="DAV.password" value="admin"/>
        
    <description>
        simple example build file
    </description>
        
        <target name="declare-tasks">
                <taskdef name="push" classname="org.pm.webdav.Push"/>
        	         <classpath>
        	            <fileset dir="${basedir}/lib" includes="jackrabbit-standalone-2.2.13.jar"/>
        	         </classpath>
                <taskdef name="pull" classname="org.pm.webdav.Pull"/>
        </target>

        <target name="download" depends="declare-tasks">
                <pull   url="http://${DAV.server}/${DAV.root}/default" verbose="true"
                                user="${DAV.user}" password="${DAV.password}"
                                file="boxee.dmg" outFile="boxee.dmg"/>
        </target>
        
        <target name="upload" depends="declare-tasks">
                <push   url="http://${DAV.server}/${DAV.root}/default"
                                user="${DAV.user}" password="${DAV.password}">
                        <fileset dir="." includes="**/*" excludes="**/*.jar"/>
                </push>
        </target>
</project>