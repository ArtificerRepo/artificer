<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <!-- The S-RAMP interactive shell -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.overlord.sramp:s-ramp-distro-shell:*</include>
      </includes>
      <binaries>
        <outputDirectory>bin</outputDirectory>
        <attachmentClassifier>onejar</attachmentClassifier>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputFileNameMapping>s-ramp-shell-${project.version}.jar</outputFileNameMapping>
        <directoryMode>0755</directoryMode>
        <fileMode>0755</fileMode>
      </binaries>
    </moduleSet>
  </moduleSets>
  <dependencySets>
    <!-- Overlord Commons components -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord:overlord-commons-*:war</include>
        <include>org.overlord:overlord-commons-*:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${overlord-commons.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- All of the S-RAMP WARs -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord.sramp:*:war</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The source archives for all S-RAMP modules -->
    <dependencySet>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>org.overlord.sramp:s-ramp-*:jar:sources</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The S-RAMP documentation -->
    <dependencySet>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>org.overlord.sramp:sramp-wiki:jdocbook</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- The S-RAMP Installer -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.overlord.sramp:s-ramp-installer:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- Modeshape EAP Modules -->
    <dependencySet>
      <outputDirectory>AS/EAP</outputDirectory>
      <includes>
        <include>org.modeshape:modeshape-distribution:zip:jbosseap-61-dist</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The S-RAMP demos -->
    <dependencySet>
      <outputDirectory>demos</outputDirectory>
      <includes>
        <include>org.overlord.sramp.demos:s-ramp-demos-assembly:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <!-- Files at the root of the distribution -->
    <fileSet>
      <directory>src/main/resources/ROOT</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
    <!-- Additional files in the bin subfolder -->
    <fileSet>
      <directory>../s-ramp-distro-shell/src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
      </includes>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
