<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
  	  <file>
  	  	<destName>sramp-modeshape.json</destName>
  	  	<outputDirectory>overlord/sramp.profile/</outputDirectory>
      	<filtered>true</filtered>
      	<source>./target/classes/sramp-modeshape-fuse.json</source>
  	  </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>./target/classes</directory>
      <includes>
      	<include>sramp-ui.properties</include>
      	<include>sramp.properties</include>
      </includes>
      <outputDirectory>overlord/sramp.profile/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
   <fileSet>
      <directory>./src/main/resources/</directory>
      <includes>
      	<include>io.fabric8.agent.properties</include>
      </includes>
      <outputDirectory>overlord/sramp.profile/</outputDirectory>
      <filtered>true</filtered>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
