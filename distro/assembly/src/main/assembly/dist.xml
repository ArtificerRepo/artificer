<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <!-- The Artificer interactive shell -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.artificer:artificer-distro-shell:*</include>
      </includes>
      <binaries>
        <outputDirectory>bin</outputDirectory>
        <attachmentClassifier>onejar</attachmentClassifier>
        <includeDependencies>false</includeDependencies>
        <unpack>false</unpack>
        <outputFileNameMapping>artificer-shell-${project.version}.jar</outputFileNameMapping>
        <directoryMode>0755</directoryMode>
        <fileMode>0755</fileMode>
      </binaries>
    </moduleSet>
  </moduleSets>
  <dependencySets>
  	<!-- Overlord Commons components -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>    
        <include>org.overlord:overlord-commons-*:war</include>
        <include>org.overlord:overlord-commons-*:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${version.org.overlord.overlord-commons}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- All of the Artificer WARs -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.artificer:*:war</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The source archives for all Artificer modules -->
    <dependencySet>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>org.artificer:artificer-*:jar:sources</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- The Artificer documentation -->
    <dependencySet>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>org.artificer:artificer-doc:jdocbook</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- The Artificer Installer -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.artificer:artificer-installer:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${project.version}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
    <!-- Keycloak Modules -->
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>org.keycloak:keycloak-server-overlay*:zip</include>
        <include>org.keycloak:keycloak-*-adapter-dist:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>false</unpack>
    </dependencySet>
    <!-- The Artificer demos -->
    <dependencySet>
      <outputDirectory>demos</outputDirectory>
      <includes>
        <include>org.artificer.demos:artificer-demos-assembly:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>docs/api/javadoc</outputDirectory>
      <includes>
        <include>org.artificer:artificer-javadoc:jar:javadoc</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- ant -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.apache.ant:ant:jar</include>
        <include>org.apache.ant:ant-launcher:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <!-- Files at the root of the distribution -->
    <fileSet>
      <directory>src/main/resources/ROOT</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>lib</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
    <!-- Additional files in the bin subfolder -->
    <fileSet>
      <directory>${basedir}/../shell/src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
      </includes>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
    <!-- DDL -->
    <fileSet>
      <directory>${basedir}/../../repository/hibernate/src/main/resources/ddl</directory>
      <outputDirectory>ddl</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>*.sql</include>
      </includes>
      <directoryMode>0755</directoryMode>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
</assembly>
